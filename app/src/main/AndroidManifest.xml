<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zalesskyi.notesapp">

    <application
        android:name="com.zalesskyi.notesapp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoGallery">
        <activity android:name="com.zalesskyi.notesapp.presentation.splash.SplashActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zalesskyi.notesapp.presentation.main.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zalesskyi.notesapp.presentation.auth.AuthActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>